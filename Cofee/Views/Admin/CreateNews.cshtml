﻿@using Cofee.Models.Entities; 
@model News
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "New Post";
}

<h1>Добавить новость</h1>
<form method="post" action="">
    <div class="mb-3">
        <label for="" class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Text</label>
        <input type="text" class="form-control" asp-for="Text">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Publication date</label>
        <input type="text" id="publicationDateInput" class="form-control date" asp-for="DatePublication">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Тэги</label>
        <input type="text" class="form-control" asp-for="Tags">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Коментарии к новости</label>
        <input type="text" class="form-control" asp-for="Сomments">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Сылки </label>
        <input type="text" class="form-control" placeholder="Titel" name="Urls[level]" asp-for="Urls">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Is active</label>
        <input type="checkbox" checked="checked" asp-for="IsActive">
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    <script type="text/javascript">
        $('#publicationDateInput').datepicker({
            format: 'dd/mm/yyyy'
        })
    </script>
}